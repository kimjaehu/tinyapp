    <h3>
      Login
    </h3>
      <form class="form-inline" action="/login" method="POST">
        <div class="form-group mb-2">
        <label for="email">Email:</label>
        <input class="form-control" type="text" name="email" placeholder="" style="width: 300px; margin: 1em">
        <label for="password">Password:</label>
        <input class="form-control" type="text" name="password" placeholder="" style="width: 300px; margin: 1em">
        <button type="submit" class="btn btn-secondary">Login</button>
      </div>
      </form>
